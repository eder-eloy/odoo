<!--                                        <td>Payment Status</td>-->
<!--                                    </tr>-->
<!--                                    <t t-foreach="o.construction_engineer_ids" t-as="ea">-->
<!--                                        <tr style="font-size:13px;">-->
<!--                                            <td>-->
<!--                                                <span t-field="ea.role_id.name"/>-->
<!--                                            </td>-->
<!--                                            <td>-->
<!--                                                <span t-field="ea.employee_id"/>-->
<!--                                            </td>-->
