<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="construction_insurance_risk_tree_view" model="ir.ui.view">
            <field name="name">construction.insurance.risk.tree.view</field>
            <field name="model">policy.risk</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="desc"/>
                </tree>
            </field>
        </record>
        <record id="construction_insurance_risk_action" model="ir.actions.act_window">
            <field name="name">Insurance Risk</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">policy.risk</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>