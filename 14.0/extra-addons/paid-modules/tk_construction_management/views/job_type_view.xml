<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="job_type_tree_view" model="ir.ui.view">
            <field name="name">job.type.tree.view</field>
            <field name="model">construction.job</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>
        <record id="job_type_action" model="ir.actions.act_window">
            <field name="name">Job Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.job</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>